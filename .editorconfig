root = true

[*]
indent_style             = space
indent_size              = 4
end_of_line              = lf
charset                  = utf-8
space_redirects          = true
switch_case_indent       = true
trim_trailing_whitespace = true
insert_final_newline     = true

[*.md]
trim_trailing_whitespace = false

[*.{tf,yml,yaml}]
indent_size = 2

[*.{json,json5}]
indent_size = 2

[*.rego]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
